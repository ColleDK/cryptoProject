<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/cryptoPic_start"
            android:layout_width="64dp"
            android:layout_height="64dp"
            android:layout_marginLeft="10sp"
            android:layout_marginTop="10sp"
            tools:srcCompat="@tools:sample/avatars" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_weight="1">

            <TextView
                android:id="@+id/cryptoName_start"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="21dp"
                android:text="Name"
                android:textColor="@color/neonBlue"/>

            <TextView
                android:id="@+id/cryptoShortName_start"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                android:text="Symbol"
                android:textColor="@color/neonBlue"/>
        </LinearLayout>

        <TextView
            android:id="@+id/cryptoPrice_start"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="31dp"
            android:layout_marginLeft="31dp"
            android:layout_marginTop="34dp"
            android:text="Price"
            android:textColor="@color/neonBlue"
            android:layout_weight="1"/>

        <TextView
            android:id="@+id/cryptoPercent_start"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20sp"
            android:layout_marginTop="35dp"
            android:text="Percent"
            android:textColor="@color/neonPink"
            android:gravity="right"
            android:layout_weight="1"/>

    </LinearLayout>

</RelativeLayout>